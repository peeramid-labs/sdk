{
  "compilerOptions": {
    "declarationMap": true,
    "importHelpers": false,
    "target": "es2022",
    "module": "CommonJS",
    "lib": ["es2022", "es5"],
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "../contracts/**/*"]
}
