{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist/cli",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true,
    "declarationMap": false,
    "target": "ES2020",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/cli/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
